FROM ilegeul/ubuntu:armhf-14.04-updated-v3.1

LABEL description="Ubuntu 14.04 armhf image, with development tools."
LABEL maintainer="Liviu Ionescu <ilg@livius.net>"
LABEL repository="https://github.com/xpack/xpack-build-box.git"
LABEL docs="https://github.com/xpack/xpack-build-box/tree/master/ubuntu/14-develop/README.md"

ENTRYPOINT ["linux32"]

ADD input /input
RUN DEBUG=-x linux32 bash /input/build-v3.1.sh

ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8

CMD ["/bin/bash"]
