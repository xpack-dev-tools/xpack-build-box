FROM ilegeul/ubuntu:arm64v8-16.04-updated-v3.1

LABEL description="Ubuntu 16.04 arm64v8 image, with development tools."
LABEL maintainer="Liviu Ionescu <ilg@livius.net>"
LABEL repository="https://github.com/xpack/xpack-build-box.git"
LABEL docs="https://github.com/xpack/xpack-build-box/tree/master/ubuntu/16-develop/README.md"

ARG DEBUG
ARG JOBS

ARG XBB_VERSION

ADD input /input
RUN bash /input/build-v3.1.sh

ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8

CMD ["/bin/bash"]
