FROM ilegeul/ubuntu:i386-14.04-bootstrap-v3.1

LABEL description="Ubuntu 14.04 i386 image, with the XBB."
LABEL maintainer="Liviu Ionescu <ilg@livius.net>"
LABEL repository="https://github.com/xpack/xpack-build-box.git"
LABEL docs="https://github.com/xpack/xpack-build-box/tree/master/ubuntu/14-xbb/README.md"

ENTRYPOINT ["linux32"]

ARG DEBUG
ARG JOBS

ARG XBB_VERSION
ARG XBB_LAYER
ARG RUN_LONG_TESTS

ADD input /input
RUN linux32 bash /input/build-v3.sh

CMD ["/bin/bash"]
